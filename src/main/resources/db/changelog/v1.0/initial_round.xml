<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet author="bartosz.kacperski" id="25-01-2021-1">
        <createTable tableName="rounds">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="point" type="DECIMAL(18,2)"/>
            <column name="player_id" type="BIGINT(20)">
                <constraints references="players(id)" foreignKeyName="playerForeignKey"/>
            </column>
            <column name="game_id" type="BIGINT(20)">
                <constraints references="games(id)" foreignKeyName="gameForeignKey"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>